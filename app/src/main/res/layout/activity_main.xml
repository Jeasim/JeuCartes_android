<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvNbCartesRestantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:gravity="center"
        android:text="97 cartes"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/llPilesCroissantes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1.7"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgCroissant1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/arrow_up_float" />

        <LinearLayout
            android:id="@+id/llPileCroissante1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPileCroissante1"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:background="#f28bbc"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPileCroissante2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPileCroissante2"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:background="#f28bbc"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgCroissant2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/arrow_up_float" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPilesDecroissantes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1.7"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgDecroissant1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/arrow_down_float" />


        <LinearLayout
            android:id="@+id/llPileDecroissante1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPileDecroissante1"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:background="#f28bbc"
                android:gravity="center"
                android:text="98" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPileDecroissante2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPileDecroissante2"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:background="#f28bbc"
                android:gravity="center"
                android:text="98" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgDecroissant2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/arrow_down_float" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLigneCartes1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llCarte1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCarte1"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:background="#f28bbc"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCarte2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCarte2"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:background="#f28bbc"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCarte3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCarte3"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:background="#f28bbc"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCarte4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCarte4"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:background="#f28bbc"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLigneCartes2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llCarte5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCarte5"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:background="#f28bbc"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCarte6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCarte6"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:background="#f28bbc"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCarte7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCarte7"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:background="#f28bbc"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCarte8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCarte8"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:background="#f28bbc"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llElementsMenu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="0" />

        <Button
            android:id="@+id/btnMenu"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:text="@string/btnMenu" />

        <TextView
            android:id="@+id/tvChrono"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="right|fill_vertical"
            android:paddingRight="30dp"
            android:text="0:00" />
    </LinearLayout>

</LinearLayout>